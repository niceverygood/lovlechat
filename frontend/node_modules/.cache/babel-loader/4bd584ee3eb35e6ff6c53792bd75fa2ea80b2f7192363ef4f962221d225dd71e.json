{"ast":null,"code":"// src/hooks/useAuth.ts\nimport{useEffect,useState}from\"react\";import{onAuthStateChanged}from\"firebase/auth\";import{auth}from\"../firebase\";export function useAuth(){const[user,setUser]=useState(null);const[loading,setLoading]=useState(true);useEffect(()=>{const unsub=onAuthStateChanged(auth,u=>{setUser(u);setLoading(false);});return unsub;},[]);return{user,loading};}","map":{"version":3,"names":["useEffect","useState","onAuthStateChanged","auth","useAuth","user","setUser","loading","setLoading","unsub","u"],"sources":["/Users/seungsoohan/LovleChat/frontend/src/hooks/useAuth.ts"],"sourcesContent":["// src/hooks/useAuth.ts\nimport { useEffect, useState } from \"react\";\nimport { onAuthStateChanged, User } from \"firebase/auth\";\nimport { auth } from \"../firebase\";\n\nexport function useAuth() {\n  const [user, setUser] = useState<User | null>(null);\n  const [loading, setLoading] = useState(true);\n\n  useEffect(() => {\n    const unsub = onAuthStateChanged(auth, (u) => {\n      setUser(u);\n      setLoading(false);\n    });\n    return unsub;\n  }, []);\n\n  return { user, loading };\n}\n"],"mappings":"AAAA;AACA,OAASA,SAAS,CAAEC,QAAQ,KAAQ,OAAO,CAC3C,OAASC,kBAAkB,KAAc,eAAe,CACxD,OAASC,IAAI,KAAQ,aAAa,CAElC,MAAO,SAAS,CAAAC,OAAOA,CAAA,CAAG,CACxB,KAAM,CAACC,IAAI,CAAEC,OAAO,CAAC,CAAGL,QAAQ,CAAc,IAAI,CAAC,CACnD,KAAM,CAACM,OAAO,CAAEC,UAAU,CAAC,CAAGP,QAAQ,CAAC,IAAI,CAAC,CAE5CD,SAAS,CAAC,IAAM,CACd,KAAM,CAAAS,KAAK,CAAGP,kBAAkB,CAACC,IAAI,CAAGO,CAAC,EAAK,CAC5CJ,OAAO,CAACI,CAAC,CAAC,CACVF,UAAU,CAAC,KAAK,CAAC,CACnB,CAAC,CAAC,CACF,MAAO,CAAAC,KAAK,CACd,CAAC,CAAE,EAAE,CAAC,CAEN,MAAO,CAAEJ,IAAI,CAAEE,OAAQ,CAAC,CAC1B","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}