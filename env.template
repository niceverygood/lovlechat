# 🔧 LovleChat EC2 Production Environment Variables
# 이 파일을 backend/.env로 복사하고 실제 값으로 변경하세요

# Node.js 환경
NODE_ENV=production

# 데이터베이스 설정 (AWS RDS)
DB_HOST=your-rds-endpoint.amazonaws.com
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_DATABASE=lovlechat
DB_PORT=3306

# 서버 설정
PORT=3002
FRONTEND_URL=http://your-ec2-ip

# OpenAI API (채팅 기능용)
OPENAI_API_KEY=your-openai-api-key

# 아임포트 결제 설정
IAMPORT_KEY=your-iamport-key
IAMPORT_SECRET=your-iamport-secret

# Firebase 설정 (인증용)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# 로그 레벨
LOG_LEVEL=info

# CORS 설정
CORS_ORIGIN=http://your-ec2-ip

# 캐시 설정
CACHE_TTL=300
MAX_CACHE_SIZE=100

# EC2 전용 설정
IS_EC2=true
INSTANCE_ID=your-instance-id 