{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs20.x"
    },
    "src/app/api/chat/**/*.ts": {
      "maxDuration": 60,
      "memory": 512,
      "runtime": "nodejs20.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Cache-Control", "value": "public, max-age=60" }
      ]
    },
    {
      "source": "/api/character/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    },
    {
      "source": "/api/persona/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=180" }
      ]
    }
  ],
  "regions": ["hnd1"],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/app/api/$1"
    }
  ]
} 